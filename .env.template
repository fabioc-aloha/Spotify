# Alex Method DJ API Credentials Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control - it contains sensitive information

# ===========================================
# SPOTIFY API CREDENTIALS
# ===========================================
# Get these from: https://developer.spotify.com/dashboard
# 1. Create a new app
# 2. Get Client ID and Client Secret from app settings
# 3. Add redirect URI in app settings

SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback

# ===========================================
# ALEX METHOD DJ SPOTIFY SETTINGS
# ===========================================

# Default playlist settings
DEFAULT_PLAYLIST_PUBLIC=true
DEFAULT_PLAYLIST_DESCRIPTION=Created with the Alex Method DJ

# Audio analysis settings
ENABLE_AUDIO_ANALYSIS=true
ENABLE_VISUALIZATION=true

# Development settings
DEBUG_MODE=false
LOG_LEVEL=INFO

# ===========================================
# YOUTUBE MUSIC API CREDENTIALS
# ===========================================
# Get these from: https://console.cloud.google.com/
# 1. Create a new project or select existing project
# 2. Enable YouTube Data API v3
# 3. Create credentials (API Key and OAuth 2.0 Client ID)
# 4. Download OAuth client configuration JSON file

YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Path to OAuth2 client configuration JSON file
# Download from Google Cloud Console after creating OAuth credentials
YOUTUBE_CLIENT_CONFIG=client_secret.json

# ===========================================
# OPENAI API CREDENTIALS
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
# 1. Create an OpenAI account
# 2. Go to API Keys section
# 3. Create a new secret key
# 4. Copy the key to this configuration

OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API settings
OPENAI_MODEL=dall-e-3
OPENAI_IMAGE_SIZE=1024x1024
OPENAI_IMAGE_QUALITY=hd
OPENAI_IMAGE_STYLE=vivid

